<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendationFragment">

    <LinearLayout
        android:id="@+id/llRecommendations"
        android:layout_width="match_parent"
        android:layout_marginBottom="45dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="104dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:text="Recommendations"
                android:textColor="@color/green_cool"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="163dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:src="@drawable/splash_logo_mydreamcar" />
        </LinearLayout>

        <TextView
            android:id="@+id/recommendationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Based on your scenario"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            android:textStyle="italic" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp" />

</RelativeLayout>