<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scenario.Question2Fragment">

    <TextView
        android:id="@+id/question2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="29dp"
        android:text="Do you need a car with a large storage capacity?"
        android:textColor="#088008"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroupYesNo"
        android:layout_width="269dp"
        android:layout_height="93dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question2Text">

        <RadioButton
            android:id="@+id/radioBtnYES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/green_cool"
            android:text="YES"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioBtnNo"
            android:layout_width="match_parent"
            android:buttonTint="@color/green_cool"
            android:layout_height="wrap_content"
            android:text="NO"
            android:textSize="20dp" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>