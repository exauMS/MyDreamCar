<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPostsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoMyPostPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_my_dream_car" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageNoContentYetMyPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_content_yet"
        android:visibility="invisible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMyPosts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>