<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logoHomePage"
                android:layout_width="263dp"
                android:layout_marginLeft="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/logo_my_dream_car" />

            <Button
                android:id="@+id/add_button"
                android:layout_width="wrap_content"
                android:layout_marginRight="2dp"
                android:textColor="@color/green_cool"
                android:textStyle="bold"
                android:background="@drawable/corner_colored"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:text="Add Post" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageNoContentYet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_content_yet"
        android:visibility="invisible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp">

    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>